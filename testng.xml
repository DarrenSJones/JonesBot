<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="JonesBot Test Suite" verbose="10" preserve-order="true">

	<test name="Database">
		<classes>
			<class name="ca.darrensjones.jonesbot.test.db.Tables" />
			<class name="ca.darrensjones.jonesbot.test.db.controller.TCReaction" />
		</classes>
	</test>

	<test name="Handlers">
		<classes>
			<class name="ca.darrensjones.jonesbot.test.handler.TReactionHandler" />
			<class name="ca.darrensjones.jonesbot.test.handler.TCommandHandler" />
		</classes>
	</test>

	<test name="Commands">
		<classes>
			<class name="ca.darrensjones.jonesbot.test.command.TCommandPing" />
			<class name="ca.darrensjones.jonesbot.test.command.TCommandReaction" />
		</classes>
	</test>

</suite>